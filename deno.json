{
  "lock": false,
  "name": "@esroyo/deno-bump-workspaces",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./cli.ts"
  },
  "version": "0.3.7",
  "tasks": {
    "clean": "git branch | grep \"release-\" | xargs git branch -D",
    "test": "deno test -A",
    "coverage": "deno task test --clean --reporter=dot --coverage=coverage && deno coverage --lcov --output=coverage.lcov --exclude='src/test-utils.ts|vendor' coverage && genhtml -o coverage/report coverage.lcov",
    "bump": "git tag bump && git push origin bump && git tag -d bump"
  },
  "imports": {
    "@david/dax": "jsr:@david/dax@^0.40.1",
    "@std/assert": "jsr:@std/assert@^0.224.0",
    "@std/cli": "jsr:@std/cli@^0.224.0",
    "@std/fmt": "jsr:@std/fmt@^0.224.0",
    "@std/fs": "jsr:@std/fs@^0.224.0",
    "@std/jsonc": "jsr:@std/jsonc@^0.224.0",
    "@std/path": "jsr:@std/path@^0.224.0",
    "@std/semver": "jsr:@std/semver@^0.224.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "lint": {
    "rules": {
      "exclude": ["require-await"]
    }
  },
  "publish": {
    "exclude": [
      "**/*_test.ts",
      "**/*.test.ts",
      "**/test_*.ts",
      "**/*.snap",
      ".github/",
      "coverage/",
      "testdata/",
      "*.lcov",
      ".*"
    ]
  }
}
